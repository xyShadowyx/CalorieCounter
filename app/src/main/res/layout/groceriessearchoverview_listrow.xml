<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/idGroceriesSearchOverviewRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <TextView android:id="@+id/idGroceriesSearchOverviewGrocery"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/textsize"
              android:text="@string/groceriesearchoverview_grocery"
              android:layout_centerVertical="true"
              android:paddingTop="@dimen/padding"
              android:layout_marginLeft="@dimen/margin_2"
              android:textColor="@color/black"/>

    <ImageView android:id="@+id/idGroceriesSearchOverviewSettingButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="@dimen/padding"
               android:layout_marginRight="@dimen/margin_2"
               android:layout_centerVertical="true"
               android:layout_toLeftOf="@+id/idGroceriesSearchOverviewDeleteButton"
               android:src="@drawable/settings_32"
               android:focusable="false"
               android:focusableInTouchMode="false"
               android:clickable="false"/>

    <ImageView android:id="@+id/idGroceriesSearchOverviewDeleteButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="@dimen/padding"
               android:layout_marginRight="@dimen/margin_2"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:src="@drawable/xmark_32"
               android:focusable="false"
               android:focusableInTouchMode="false"
               android:clickable="false"/>

</RelativeLayout>