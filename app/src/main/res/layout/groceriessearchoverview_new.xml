<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/idGroceriesSearchOverview"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:weightSum="1">

    <TextView android:id="@+id/idGroceriesSearchOverviewTitel"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/blue"
              android:padding="@dimen/headline"
              android:text="@string/titel"
              android:textSize="@dimen/headline"
              android:textColor="@color/white"
              android:gravity="center"
              android:textStyle="bold"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/groceriesearchoverview_search"
              android:textColor="@color/black"
              android:textSize="@dimen/textsize"
              android:gravity="center"
              android:textStyle="italic"
              android:layout_margin="@dimen/headlinespace"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">


        <SearchView android:id="@+id/idGroceriesSearchOverviewSearchView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Search..."
                    android:layout_weight="1"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize"
                    android:gravity="left"
                    android:maxLength="32"
                    android:textStyle="italic"
                    android:layout_margin="@dimen/margin"/>

        <Button
                android:id="@+id/idGroceriesSearchOverviewSearchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suchen"
                android:layout_marginRight="@dimen/margin"
                android:layout_gravity="right"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/idGroceriesSearchOverviewInputList"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_margin="@dimen/margin_2">

        <ListView
                android:id="@+id/idGroceriesSearchOverviewListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding">

        </ListView>

    </LinearLayout>


    <LinearLayout android:id="@+id/idGroceriesSearchOverviewNewGrocery"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/margin"
                   android:id="@+id/idGroceriesSearchOverviewAddGroceryButton"
                   android:src="@drawable/plus_32"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="@dimen/margin"
                  android:textSize="@dimen/textsize"
                  android:text="@string/groceriesearchoverview_newGrocery"
                  android:paddingLeft="@dimen/margin"
                  android:textColor="@color/black"/>


    </LinearLayout>

    <LinearLayout android:id="@+id/idGroceriesSearchOverviewNewMenu"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingTop="@dimen/padding">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/margin"
                   android:id="@+id/idGroceriesSearchOverviewAddMenuButton"
                   android:src="@drawable/plus_32"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="@dimen/margin"
                  android:textSize="@dimen/textsize"
                  android:text="@string/groceriesearchoverview_newMenu"
                  android:paddingLeft="@dimen/margin"
                  android:textColor="@color/black"/>


    </LinearLayout>

</LinearLayout>